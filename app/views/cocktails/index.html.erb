<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h5>Barra de Cócteles</h5>
   <%= link_to "Create a new cocktail", "/cocktails/new", class: "home-button btn btn-primary" %>
</div>



<div class="banner">
  <div class="banner-content">
    <h1>Barra de Cócteles</h1>
    <p>Best cocktails in town</p>
  </div>
</div>

<div class="container">
<h1 class='cocktail-header font-weight-bold text-center mb-4'>Check out the classics</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background: linear-gradient(rgba(0,10,10,0.2) 0%, rgba(10,10,10,0.2) 0%), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 200, crop: :fill if cocktail.photo.attached?%>');">
          <div class="cocktail-card-content">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to 'See Details', cocktail_path(cocktail), class: "card-link" %>
        </div>
        <br>
      </div>
    <% end %>
  </div>
</div>






